<Window x:Name="window_Start" x:Class="Blackjack01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack01"
        mc:Ignorable="d"
        Title="Blackjack" Height="450" Width="800" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid x:Name="grid_Start">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="785*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="images/start-menu_background.png"/>
        </Grid.Background>
        <Button x:Name="btn_Start" Content="Start Game" HorizontalAlignment="Left" Height="34" Margin="307.166,213,0,0" VerticalAlignment="Top" Width="111" Background="#FF060606" FontWeight="Bold" FontSize="14" Foreground="White" Grid.Column="1" Click="btn_Start_Click"/>
        <Button x:Name="btn_Exit" Content="Exit" HorizontalAlignment="Left" Margin="307.166,281,0,0" VerticalAlignment="Top" Width="111" Height="34" Background="#FF110A0A" Foreground="#FFF7F4F4" FontSize="14" FontWeight="Bold" Click="btn_Exit_Click" Grid.Column="1"/>

    </Grid>

</Window>
